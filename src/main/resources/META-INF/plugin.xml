<idea-plugin>
    <id>com.plugin.samusprogressbar</id>
    <name>Samus Progress Bar</name>
    <version>1.0</version>
    <idea-version since-build="212"/>
    <vendor email="">Hugo DESCOTTES</vendor>

    <description><![CDATA[
      This is the Samus Progress Bar for IJ based IDEs based on the Nyan Progress Bar by Dmitry Batkovitch and Mario Progress Bar by KikiManjaro.
      It display Samus for the basic bar and hers Morphball for the indeterminate one.
      <br>
      <br>
      DETERMINATE:
      <br>
      <img src="" title="SamusDeterminateBar" />
      <br>
      INDETERMINATE:
      <br>
      <img src="" title="SamusIndeterminateBar" />
      <br>
      <br>
      You can access plugin's configuration in :
      <br>
      Settings > Tools > Samus Progress Bar
      <br>
      <img src="" title="Options" />
    ]]></description>

    <change-notes><![CDATA[
      <em>1.0 Creation of the Samus Progress Bar Project</em><br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.plugin.samusprogressbar.settings.SettingsState" />
        <applicationConfigurable
                parentId="tools"
                instance="com.plugin.samusprogressbar.settings.Config"
                id="org.intellij.sdk.settings.AppSettingsConfigurable"
                displayName="Samus Progress Bar"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <applicationListeners>
        <listener class="com.plugin.samusprogressbar.ProgressBarLafManagerListener"
                  topic="com.intellij.ide.ui.LafManagerListener" />
        <listener class="com.plugin.samusprogressbar.ProgressBarLafManagerListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>